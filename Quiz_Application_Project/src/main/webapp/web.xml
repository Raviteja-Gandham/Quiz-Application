<?xml version="1.0" encoding="UTF-8"?>

<web-app>

    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>Login.html</welcome-file>
    </welcome-file-list>

    <!-- Example Servlet -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.ravi.Services.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/user_login</url-pattern>
    </servlet-mapping>

    <!-- Error Handling (Optional) -->
    <error-page>
        <error-code>404</error-code>
        <location>/error.html</location>
    </error-page>

    <servlet>
        <servlet-name>SubmitQuiz</servlet-name>
        <servlet-class>SubmitQuiz</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubmitQuiz</servlet-name>
        <url-pattern>/SubmitQuiz</url-pattern>
    </servlet-mapping>
    
    <dependency>
    <groupId>com.google.code.gson</groupId>
    <artifactId>gson</artifactId>
    <version>2.8.9</version> <!-- Use the latest version -->
</dependency>
    
</web-app>

